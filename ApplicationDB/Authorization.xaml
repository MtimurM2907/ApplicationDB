<Page x:Class="ApplicationDB.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ApplicationDB"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid Background="Wheat">
        <TextBlock HorizontalAlignment="Center" Height="55" Margin="0,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="288" TextAlignment="Center" FontSize="20" FontFamily="Times New Roman"><Run Language="ru-ru" Text="Авторизация"/></TextBlock>
        <TextBlock HorizontalAlignment="Center" Height="28" Margin="0,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="288" FontSize="16" FontFamily="Times New Roman"><Run Language="ru-ru" Text="Логин"/></TextBlock>
        <TextBox x:Name="Login" HorizontalAlignment="Left" Height="39" Margin="256,144,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="344"/>
        <TextBlock HorizontalAlignment="Center" Height="28" Margin="0,197,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="288" FontSize="16" FontFamily="Times New Roman"><Run Language="ru-ru" Text="Пароль"/></TextBlock>
        <PasswordBox x:Name="Password" HorizontalAlignment="Left" Height="39" Margin="256,225,0,0" VerticalAlignment="Top" Width="344"/>
        <Button x:Name="UserEnter" Content="Войти" HorizontalAlignment="Left" Height="32" Margin="256,290,0,0" VerticalAlignment="Top" Width="344" FontSize="16" FontFamily="Times New Roman" Click="UserEnter_Click"/>
        <Button x:Name="RegistrationButton" Content="Регистрация" HorizontalAlignment="Left" Height="32" Margin="256,337,0,0" VerticalAlignment="Top" Width="344" FontSize="16" FontFamily="Times New Roman" Click="RegistrationButton_Click"/>
        <PasswordBox HorizontalAlignment="Left" Height="16" Margin="-143,353,0,0" VerticalAlignment="Top" Width="3"/>
    </Grid>
</Page>
